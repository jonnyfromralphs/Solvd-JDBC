<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.ReviewMapper">
    <select id="selectReviewById" resultMap="org.example.mapper.ReviewMapper.reviewResultMap">
        SELECT * FROM review WHERE id = #{id}
    </select>

    <select id="getIdByReview">
        SELECT id FROM review WHERE comment = #{comment}
    </select>

    <select id="getAllReviewsByProductId">
        SELECT * FROM review WHERE product_id = #{id}
    </select>

    <insert id="addReview">
        INSERT INTO review (rating, comment, product_id) VALUES (${rating}, #{comment}, #{productId})
    </insert>

    <delete id="deleteReview">
        DELETE FROM review WHERE id = #{id}
    </delete>

    <update id="updateReview">
        UPDATE review SET rating = ${rating}, comment = #{comment}, product_id = #{productId} WHERE id = #{id}
    </update>

    <resultMap id="reviewResultMap" type="org.example.model.Review" autoMapping="true">
        <result property="productId" column="product_id"/>
    </resultMap>
</mapper>